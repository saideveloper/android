<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/photo1" >
    </ImageView>

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="TextView"
            android:textColor="@color/white_light"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Show restaurant menu details"
            android:textColor="@color/white_light"
            android:paddingBottom="20dp"
            android:textSize="24sp"/>
        
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#25ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Info"
            android:textColor="@color/white_light"
            android:textSize="24sp"/>
        
        
        <TextView
            android:id="@+id/cuisines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Cuisines"
            android:textColor="@color/white_light"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cuisinesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textColor="@color/white_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Services"
            android:textColor="@color/white_light"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/servicesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textColor="@color/white_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/operationHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="OperationHours"
            android:textColor="@color/white_light"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/operationHoursDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textColor="@color/white_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/paymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="PaymentMode"
            android:textColor="@color/white_light"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/paymentModeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textColor="@color/white_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Address"
            android:textColor="@color/white_light"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/addressDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textColor="@color/white_light"
            android:textSize="16sp"/>

        <!-- This can go anywhere in your layout (see other demos for some examples). -->


        <!-- <fragment -->
        <!-- android:id="@+id/map" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="200dp" -->
        <!-- class="com.google.android.gms.maps.SupportMapFragment" /> -->
    </LinearLayout>

</LinearLayout>