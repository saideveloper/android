<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".ExpandableMenuActivity" >

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_white"
        android:gravity="center_vertical" >

        <!-- <TextView -->
        <!-- android:id="@+id/textView1" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="5dp" -->
        <!-- android:textColor="#FFFFFF" -->
        <!-- android:textIsSelectable="true" -->
        <!-- android:textSize="14sp" -->
        <!-- android:textStyle="bold" /> -->

        <FrameLayout
            android:id="@+id/frameLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingBottom="0dp" >

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:src="@drawable/seafood" />

            <ImageView
                android:id="@+id/itemImageHover"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:src="@drawable/overlay_right_tick"
                android:scaleX="0"
                android:scaleY="0"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="0dp" >

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:text="itemName"
                    android:textColor="@color/black_light"
                    android:textSize="26sp"
                    android:translationX="95dp" />

                <!-- <TextView -->
                <!-- android:id="@+id/priceRight" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_alignParentRight="true" -->
                <!-- android:layout_alignParentTop="true" -->
                <!-- android:paddingRight="10dp" -->
                <!-- android:text="Rs 100" -->
                <!-- android:textColor="@color/black_light" -->
                <!-- android:textSize="20sp" /> -->

                <View
                    android:id="@+id/layoutAddRemoveVBar"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/layoutAddRemove"
                    android:background="#25000000" />

                <LinearLayout
                    android:id="@+id/layoutAddRemove"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/layoutAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_new" />

                    <View
                        android:id="@+id/layoutAddRemoveDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#25000000"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/layoutRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_minus"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- <ImageView -->
                <!-- android:id="@+id/layoutAdd" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:layout_alignParentRight="true" -->
                <!-- android:layout_centerVertical="true" -->
                <!-- android:layout_marginRight="10dp" -->
                <!-- android:src="@drawable/ic_action_new" /> -->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutDescOrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:translationX="95dp" >

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the sample desc"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/orderdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 100"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutQtyPrc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:alpha="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:translationX="95dp"
                android:translationY="100dp" >

                <View
                    android:id="@+id/nameUnderLine"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_light"
                    android:translationX="-155dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp" >

                        <TextView
                            android:id="@+id/quantityTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:text="Quantity:"
                            android:textColor="@color/black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="10"
                            android:textColor="@color/black_light"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="  |  "
                            android:textColor="@color/black_light"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp" >

                        <TextView
                            android:id="@+id/priceTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:text="Rs:"
                            android:textColor="@color/black_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="100"
                            android:textColor="@color/black_light"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#25000000" />

</LinearLayout>